<!DOCTYPE html>
<html>
  <head>
    <title>RentFlat</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://js.stripe.com/v3/' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>
    <%= stripe_button_connect_wallet if current_user && !current_user.can_receive_payment? %>

    <%= @cart.collect { |item| item.to_builder.attributes! } if !@cart.nil? %>
    <%= link_to "Dashboards", dashboards_path , class: "btn btn-danger" %>
    <%= yield %>
  </body>
</html>
